import numpy as np



def dist(coord1,coord2):
    """

    """
    return np.sqrt((coord1[0]-coord2[0])**2 + (coord1[1]-coord2[1])**2)


def LJdoubleWell(coord1,coord2,args):
    """

    """
    epsilon = args[0]
    r0 = args[1]
    sigma = args[2]


    r = dist(coord1,coord2)
    return 1/(r**12) + 2/(r**6) + epsilon*np.exp( -  (r - r0)**2/(2*sigma**2))



